{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "SkyWalking",
  "id": "skywalking-datasource",
  "metrics": true,
  "info": {
    "description": "Apache SkyWalking",
    "author": {
      "name": "Apache SkyWalking"
    },
    "keywords": ["datasource"],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [],
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": "^9.5.1",
    "plugins": []
  },
  "routes": [
    {
      "path": "graphql",
      "url": "{{ .JsonData.URL }}",
      "headers": [
        {
          "name": "Authorization",
          "content": "{{ .SecureJsonData.basicAuth }}"
        },
        {
          "name": "Content-Type",
          "content": "application/json"
        }
      ]
    }
  ]
}
